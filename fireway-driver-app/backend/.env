PORT=5000
NODE_ENV=development

# Database (using SQLite for demo - in production use PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fireway_db
DB_USER=postgres
DB_PASSWORD=postgres

# JWT
JWT_SECRET=fireway_secret_key_2024_change_in_production
JWT_EXPIRES_IN=7d

# Store Location (for geofencing) - London coordinates
STORE_LATITUDE=51.5074
STORE_LONGITUDE=-0.1278
GEOFENCE_RADIUS_METERS=100

# Google Maps API
GOOGLE_MAPS_API_KEY=demo_key

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=demo_sid
TWILIO_AUTH_TOKEN=demo_token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase Cloud Messaging
FCM_SERVER_KEY=demo_fcm_key
